<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Homepage</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">

            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="40%">
            <pre class="mt-3"><%= blog.body %></pre>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImage %>" width="30px">
            <%= blog.createdBy.fullName %>
        </div>

        <% if (locals.user) { %>

            <div class="container mt-3">
                <h4>Comment</h4>
                <form action="/blog/comment/<%= blog._id %>" , method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Enter you comment">
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>


              

            </div>

            <% } %>

            <div class="container mt-3">
                <h5>Comments (<%= comments.length %>)</h5>

                <% comments.forEach(comment=> { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImage %>" width="25px">
                        <%= comment.createdBy.fullName %>
                            <pre><%= comment.content %></pre>
                    </div>
                    <% }) %>
            </div>


                <%- include('./partials/scripts') %>


</body>

</html>